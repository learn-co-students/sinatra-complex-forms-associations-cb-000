<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name" />
  <br/>
  <label>Choose and existing owner:</label>
  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
      <%= owner.name %>
    </input>
  <% end %>

  <br/>

  <label>or, create a new owner:</label>
  <label>name:</label>
  <input type="text" name="owner[name]" id="owner_name"/>

  <br/>
  <input type="submit" value="Update Pet" />
</form>
