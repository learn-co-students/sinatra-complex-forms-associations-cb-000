<h1>Update Pet</h1>

<form method="POST" action="/pets/<%=@pet.id%>">
  <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>"/>
  <% Owner.all.each do |owner| %>
  <input id="<%=owner.id%>" type="checkbox" name="pet[owner_id]" value="<%=owner.id%>"
  <%="checked" if @pet.owner == owner %>><%=owner.name%></input>
  <% end %>
  <label>or create new owner</label>
  <label>name:</label>
  <input id="owner_name" type="text" name="owner[name]"/>
  <input type="submit" value="Update Pet"/>
</form>
