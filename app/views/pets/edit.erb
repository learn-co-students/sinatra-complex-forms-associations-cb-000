<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>
    Name:
    <input type="text" name="pet[name]" value="<% @pet.name %>">
  </label>

  <br><br>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"
    <%= 'checked' if owner.id == @pet.owner.id %>>
    <%= owner.name %>
  <% end %>

  <br><br>
  <label>
    Or create a new owner:
    <input type="text" name="owner_name">
  </label>

  <input type="submit" value="Update Pet">
</form>
