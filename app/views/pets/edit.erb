<h1>Update Pet</h1>

<form method="post" action="/pets/<%=@pet.id%>/edit">
<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

<% Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id%>><%= owner.name %></input>
<% end %>

<input type="text" name="owner[name]" id="owner_name">


<input type="submit" value="Update Pet" id="submit">
</form>
