<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <p>Name:</p>
  <p><input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>"></p>
  <p><% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" value="<%= owner.id %>" name="pet[owner_id]" <%= 'checked' if @pet.owner && @pet.owner.name == owner.name %>><%= owner.name %></input>
    <% end %>
  </p>
  <p>and/or, create a new Owner:</p>
  <p><input type="text" name="owner[name]" id="owner_name"></p>
  <p><input type="submit" value="Update Pet"></p>
</form>
