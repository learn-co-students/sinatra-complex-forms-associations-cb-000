<h1>Update Pet</h1>

<form method="POST" action="/pets/<%=@pet.id%>">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name %>">

  <br></br>

  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%>>
  <% end %>

  <br></br>

  <p>And/Or create a new owner:</p>

  <br></br>

  <label>Owner Name:</label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name">

  <br></br>
  
  <input type="submit" value="Update Pet">

</form>
