<h1>Update Pet</h1>
<form method="POST" action="/pets/<%= @pet.id %>">
  <input name="_method" value="patch" type="hidden">

  <label>Pet Name:</label>
  <input id="pet_name" type="text" name="pet[name]">
  <br>

  <label>Owner:</label>
  <% if @pet.owner != nil %>
    <% @owners.each do |owner| %>
      <input type="radio" id="<%= owner.id%>" name="pet[owner_id]" value="<%= owner.id %>"
      <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
    <% end %>
  <% end %>
  <br>

  <label>New Owner:</label>
  <input id="owner_name" type="text" name="owner[name]">
  <input type="submit" value="Update Pet">
</form>
