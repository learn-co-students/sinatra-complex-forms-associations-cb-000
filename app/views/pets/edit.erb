<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <p>
  Pet Name: <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"/>
  </p>


  <h3>Existing Owners</h3>

       <%Owner.all.each do |owner|%>
         <input type="radio" name="pet[owner_id]" 
           value="<%=owner.id%>" 
           id="<%=owner.id%>" 
           <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
         <%end%>

   <h3>Add a New Owner</h3>
  <p> 
    <input  type="text" name="owner[name]" id="owner_name"></input>

    <input type="submit" value="Update Pet"/>
  </p>
  </form>

