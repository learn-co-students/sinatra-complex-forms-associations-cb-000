<h1>Update <%= @pet.name %></h1>

<form action="/pets/<%= @pet.id %>" method="POST">






  PET NAME: <input type="text" name="pet[name]" id="pet_name" value= <%= @pet.name %> >
  <p></p>
  <% @owners.each do |owner|%>
    <input type="radio" name="pet[owner][name]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if owner.pets.include?(@pet) %>  > <%= owner.name %>
  <% end %>



  <p></p>

  NEW OWNER: <input type="text" name="owner[name]" id="owner_name">

  <input type="submit" value="Update Pet">





</form>
