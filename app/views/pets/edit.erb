<h1>Update Pet</h1>
<form method="post" action="/pets/<%= @pet.id %>">
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br></br>

  <label>Choose an existing owner:</label>
  <br></br>
  <% @owners.each do |owner| %>
    <input type="radio"
           name="pet[owner_id]"
           value="<%= owner.id %>"
           id="<%= owner.id %>"
           <%= 'checked' if @pet.owner_id == owner.id %>>
           <%= owner.name %>
    </input>
  <% end %>
  <br></br>

  <p>Or, create a new owner:</p>
  <label>Name:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name"/>
  <br></br>

  <input type="submit" value="Update Pet">
</form>
