<h1>Create a new Pet</h1>
<form action="/pets" method="POST">

  PET NAME: <input type="text" name="pet[name]" id="pet_name">
  <p></p>
  <% @owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"><%= owner.name %>
  <% end %>

  <input type="submit" value="Create Pet">

  NEW OWNER: <input type="text" name="pet[owner][name]" id="owner_name">

  <input type="submit" value="Create Owner">



</form>
