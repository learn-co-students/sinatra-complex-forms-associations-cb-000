<h1>Create a new Pet</h1>

<form  action="/pets" method="post">
  <label>Name:</label>
    <input id="pet_name" name="pet[name]" type="text" required>

    <br></br>

    <label>Choose an owner:</label>

    <% Owner.all.each do |owner| %>
      <input type="checkbox" name="owner_id" value="<%=owner.id%>"><%=owner.name%>
    <% end %>

    <label>Or create a new owner:</label>
      <input id="owner_name" type="text" name="owner_name">

    <input type="submit" value="Create Pet">
</form>
