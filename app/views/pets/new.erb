<h1>Create a new Pet</h1>

 <!-- The form to create a new pet should allow a user to select from the list of available owners and/or create a new owner -->
 <!-- expect(page).to have_field(:owner_name) -->

<form action="/pets" method="POST">
  <label>Name:</label>

  <input type="text" name="pet[name]" id="pet_name">

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"  ><%= owner.name %></input>

    <%end%>
    <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br></br>
  

  <input type="submit" value="Create Pet">
</form>
