<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <label>Name:</label>
  <br></br>
  <input type="text" name="owner[name]" value="<%= @owner.name %>">
  <br></br>

  <label>Choose an existing pet:</label>
  <br></br>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]"
           value="<%= pet.id %>"
           id="<%= pet.id %>"
           <%= 'checked' if @owner.pets.include?(pet) %>>
           <%= pet.name %>
    </input>
  <% end %>
  <br></br>

  <p>Or, create a new pet:</p>
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" />
  <br></br>

  <input type="submit" value="Update Owner">
</form>
