<h1>Update Owner</h1>

<form method="post" action="/owners/<%=@owner.id%>">
  <label>Name:</label>

  <br></br>

  <input type="text" id="owner_name" name="owner[name]" value="<%=@owner.name%>">

  <br></br>

  <label>Choose an existing pet:</label>

  <br></br>

  <%@pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.name%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>
    <input id="pet_name" type="text" name="pet[name]"></input>
  <br></br>
  <input type="submit" value="Update Owner">
</form>
